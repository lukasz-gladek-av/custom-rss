        <source srcset="https://assetsio.gnwcdn.com/switch2-dock-sadface.png?width=570&amp;quality=85&amp;format=jpg&amp;dpr=2&amp;auto=webp" media="(max-width: 549px) and (max-resolution: 2dppx)">
        <source srcset="https://assetsio.gnwcdn.com/switch2-dock-sadface.png?width=570&amp;quality=85&amp;format=jpg&amp;dpr=3&amp;auto=webp" media="(max-width: 549px) and (max-resolution: 3dppx)">
