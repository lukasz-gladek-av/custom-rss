        <source srcset="https://assetsio.gnwcdn.com/Scott-Pilgrim-EX-new-key-art.jpg?width=570&amp;quality=85&amp;format=jpg&amp;dpr=1.75&amp;auto=webp" media="(max-width: 549px) and (max-resolution: 1.75dppx)">
        <source srcset="https://assetsio.gnwcdn.com/Scott-Pilgrim-EX-new-key-art.jpg?width=570&amp;quality=85&amp;format=jpg&amp;dpr=2&amp;auto=webp" media="(max-width: 549px) and (max-resolution: 2dppx)">
        <source srcset="https://assetsio.gnwcdn.com/Scott-Pilgrim-EX-new-key-art.jpg?width=570&amp;quality=85&amp;format=jpg&amp;dpr=3&amp;auto=webp" media="(max-width: 549px) and (max-resolution: 3dppx)">
