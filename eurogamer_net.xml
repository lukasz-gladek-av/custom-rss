        <source srcset="https://assetsio.gnwcdn.com/Battlefield-6-Official-Reveal-Trailer-0-58-screenshot.png?width=570&amp;quality=80&amp;format=jpg&amp;auto=webp" media="(min-width: 550px) and (max-resolution: 1dppx)">
        <source srcset="https://assetsio.gnwcdn.com/Battlefield-6-Official-Reveal-Trailer-0-58-screenshot.png?width=570&amp;quality=80&amp;format=jpg&amp;dpr=1.5&amp;auto=webp" media="(min-width: 550px) and (max-resolution: 1.5dppx)">
